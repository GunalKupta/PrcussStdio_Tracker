<p id="notice"><%= notice %></p>

<h1>Sign Ins</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Event</th>
      <th>Signin time</th>
      <th>Attending</th>
      <th>Reason</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rsvps.each do |rsvp| %>
      <tr>
        <td><%= rsvp.user_id %></td>
        <td><%= rsvp.event_id %></td>
        <td><%= rsvp.rsvp_time %></td>
        <td><%= rsvp.attending %></td>
        <td><%= rsvp.reason %></td>
        <td><%= link_to 'Show', rsvp %></td>
        <td><%= link_to 'Edit', edit_rsvp_path(rsvp) %></td>
        <td><%= link_to 'Destroy', rsvp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sign In', new_rsvp_path %>
