<nav class="navbar navbar-expand-lg navbar-light bg-secondary">
    <a class="navbar-brand white" href="#">Percussion Studio</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
        <li class="nav-item">
        <button type="button" class="btn btn-default navbar-btn"><%= link_to 'Storage Keys', storage_keys_path, class: 'nav-link white'%>
        </li>
    </ul>
    </div>
</nav>

<h3>Welcome member, <%= current_admin.full_name -%></h3>

<div class="jumbotron" id="includedContent" style="background-color:white">
    <p id="notice"><%= notice %></p>

    <h1>Upcoming Events</h1>

    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                <th>Event type</th>
                <th>Name</th>
                <th>Start time</th>
                <th>End time</th>
                <th>Location</th>
                <th>Description</th>
                <th colspan="3"></th>
                </tr>
            </thead>

            <tbody>
                <% @upcoming_events.each do |event| %>
                <tr>
                    <td><%= EventType.where(id: event.event_type).limit(1).pluck(:description).first() %></td>
                    <td><%= event.name %></td>
                    <td><%= event.start_time %></td>
                    <td><%= event.end_time %></td>
                    <td><%= event.location %></td>
                    <td><%= event.description %></td>
                    <td><%= toggle_signup_button(current_admin.uid, event.id) %></td>
                    <td><%= link_to 'Show', event, class:'a-CRUD' %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>

    <br>

    <div class="jumbotron jumbotron-fluid" style="background-color=white">
        <%= month_calendar(attribute: :start_time, events: @events) do |date, events| %>
        <%= date.day %>

        <% events.each do |event| %>
        <div>
            <%= event.name %>
        </div>
        <% end %>
        <% end %>
    </div>

    <h1>Previous Events</h1>

    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Event type</th>
                    <th>Name</th>
                    <th>Start time</th>
                    <th>End time</th>
                    <th>Location</th>
                    <th>Description</th>
                    <th colspan="3"></th>
                </tr>
            </thead>

            <tbody>
                <% @past_events.each do |event| %>
                <tr>
                <td><%= EventType.where(id: event.event_type).limit(1).pluck(:description).first() %></td>
                <td><%= event.name %></td>
                <td><%= event.start_time %></td>
                <td><%= event.end_time %></td>
                <td><%= event.location %></td>
                <td><%= event.description %></td>
                <td><%= link_to 'Show', event, class:'a-CRUD' %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>

    <%= link_to "Sign Out", destroy_admin_session_path, class: "btn btn-primary a-primary" %>

</div>
