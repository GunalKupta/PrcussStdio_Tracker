<div class="jumbotron" id="includedContent" style="background-color:white">
<p id="notice"><%= notice %></p>

<h1>Upcoming Events</h1>

<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Event type</th>
      <th>Name</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Location</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @upcoming_events.each do |event| %>
    <tr>
      <td><%= EventType.where(id: event.event_type).limit(1).pluck(:description).first() %></td>
      <td><%= event.name %></td>
      <td><%= event.start_time %></td>
      <td><%= event.end_time %></td>
      <td><%= event.location %></td>
      <td><%= event.description %></td>
      <td><%= toggle_signup_button(current_admin.uid, event.id) %></td>
      <td><%= link_to 'Show', event, class:'a-CRUD' %></td>
      <td><%= link_to 'Edit', edit_event_path(event), class:'a-CRUD' %></td>
      <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class:'a-CRUD' %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Event', new_event_path, class:"btn btn-primary a-primary" %>

<br><br>

<div class="jumbotron jumbotron-fluid" style="background-color=white">
<%= month_calendar(attribute: :start_time, events: @events) do |date, events| %>
  <%= date.day %>

  <% events.each do |event| %>
    <div>
      <%= event.name %>
    </div>
  <% end %>
<% end %>
</div>

<h1>Previous Events</h1>

<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Event type</th>
      <th>Name</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Location</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @past_events.each do |event| %>
    <tr>
      <td><%= EventType.where(id: event.event_type).limit(1).pluck(:description).first() %></td>
      <td><%= event.name %></td>
      <td><%= event.start_time %></td>
      <td><%= event.end_time %></td>
      <td><%= event.location %></td>
      <td><%= event.description %></td>
      <td><%= toggle_signup_button(current_admin.uid, event.id) %></td>
      <td><%= link_to 'Show', event, class:'a-CRUD' %></td>
      <td><%= link_to 'Edit', edit_event_path(event), class:'a-CRUD' %></td>
      <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class:'a-CRUD' %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>

<%= link_to "Sign Out", destroy_admin_session_path, class: "btn btn-primary a-primary" %>

</div>

<% else %>
<h3>You are not a member, <%= current_admin.full_name -%></h3>

    <%= link_to "Back", destroy_admin_session_path %>
<% end %>